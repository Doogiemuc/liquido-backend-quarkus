#
# Default LIQUIDO configuration
#
liquido:
  frontend-url: http://localhost:8080/gui
  login-link-expiration-hours: 24
  jwt:
    secret: jwtSecret
    expirationSecs: 3600


#
# Configuration for local testing
#
"%dev":
  quarkus:
    hibernate-orm:
      database:
        generation: "drop-and-create"
      log:
        format-sql: true
    datasource:
      devservices:
        port: 2222


#
# Configuration for PROD
#
"%prod":
  quarkus:
    hibernate-orm:
      database:
        generation:
          halt-on-error: true
      log:
        format-sql: true

    datasource:
      db-kind: postgresql
      username: liquido-db-user
      password: pwd
      jdbc:
        url: jdbc:postgresql://host:5432/liquido-prod
